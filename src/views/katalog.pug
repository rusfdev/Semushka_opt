extends layout/layout

block variables
  -var page_title = 'Каталог'
  -var title = sitename + ' - ' + page_title

block content
  include blocks/components

  -var breadcrumbs_links = ['Главная', 'Продукция', page_title]
  include blocks/breadcrumbs

  section.section.catalogue
    .container 
      .section__head
        h1.section__title Каталог
      .catalogue__wrapper 
        aside.catalogue__aside

          .catalogue-filter
            .catalogue-filter__head 
              .container
                button(aria-label='filter close').close-button.catalogue-filter-close
            form(action="").catalogue-filter__container(data-scroll-lock-scrollable)
              .container
                .catalogue-filter__box
                  //category
                  .catalogue-filter__category.is-active
                    a(href="#").catalogue-filter__category-head.is-active
                      span Орехи
                      svg.icon
                        use(xlink:href='./img/icons/sprite.svg#drop-arrow')
                  //category
                  .catalogue-filter__category.is-active
                    a(href="#").catalogue-filter__category-head
                      span Орехи
                      svg.icon
                        use(xlink:href='./img/icons/sprite.svg#drop-arrow')
                  //category
                  .catalogue-filter__category.is-active
                    a(href="#").catalogue-filter__category-head
                      span Орехи
                      svg.icon
                        use(xlink:href='./img/icons/sprite.svg#drop-arrow')
                  //category
                  .catalogue-filter__category.is-active
                    a(href="#").catalogue-filter__category-head
                      span Орехи
                      svg.icon
                        use(xlink:href='./img/icons/sprite.svg#drop-arrow')
            
            //button
            button.button.button_style-1.catalogue-filter__close-button(data-filter-close)
              span Применить фильтр

        .catalogue__content
          .catalogue__head 
            button(aria-label='open-filter').button.button_style-1.catalogue-filter-open
              span Фильтр товаров

            a.button.reset-button.catalogue__head-reset
              svg.icon
                use(xlink:href='./img/icons/sprite.svg#filter-reset')
              span Сбросить фильр

            select.select
              option По умолчанию
              option От дешевых к дорогим
              option От дорогих к дешевым
          .catalogue__items
            include blocks/components
            +product-card(1)
            +product-card(2)
            +product-card(3)
            +product-card(1)
