extends layout/layout

block variables
  -var page_title = 'Каталог'
  -var title = sitename + ' - ' + page_title

block content
  include blocks/components

  -var breadcrumbs_links = ['Главная', 'Продукция', page_title]
  include blocks/breadcrumbs

  section.section.catalogue
    .container 
      .section__head
        h1.section__title Каталог
      .catalogue__wrapper 
        aside.catalogue__aside

          .catalogue-filter
            .catalogue-filter__head 
              .container
                button(aria-label='filter close').close-button.catalogue-filter-close
            .catalogue-filter__container(data-scroll-lock-scrollable)
              .container
                //category
                .catalogue-filter__category.is-active(data-toggle="parent")   
                  .catalogue-filter__category-head.is-active(data-toggle="trigger")
                    span Орехи
                    svg.icon
                      use(xlink:href='./img/icons/sprite.svg#drop-arrow')
                  .catalogue-filter__category-content.is-active(data-toggle="content")
                    .catalogue-filter__category-element
                      +checkbox('Арахис')
                    .catalogue-filter__category-element
                      +checkbox('Бразильский орех')
                    .catalogue-filter__category-element
                      +checkbox('Грецкий орех')
                    .catalogue-filter__category-element
                      +checkbox('Кедровый орех')
                    .catalogue-filter__category-element
                      +checkbox('Кешью')
                    .catalogue-filter__category-element
                      +checkbox('Кокос')
                    .catalogue-filter__category-element
                      +checkbox('Макадамия')
                    .catalogue-filter__category-element
                      +checkbox('Миндаль')
                    .catalogue-filter__category-element
                      +checkbox('Орехи карамелизированные')
                    .catalogue-filter__category-element
                      +checkbox('Пека')
                    .catalogue-filter__category-element
                      +checkbox('Смесь ореховая')
                    .catalogue-filter__category-element
                      +checkbox('Фисташки')
                    .catalogue-filter__category-element
                      +checkbox('Фундук')
                    .catalogue-filter__category-element
                      +checkbox('Ядро абрикосовой косточки')
                //category
                .catalogue-filter__category(data-toggle="parent")  
                  .catalogue-filter__category-head(data-toggle="trigger")
                    span Семена
                    svg.icon
                      use(xlink:href='./img/icons/sprite.svg#drop-arrow')
                  .catalogue-filter__category-content(data-toggle="content")
                    .catalogue-filter__category-element
                      +checkbox('Арахис')
                    .catalogue-filter__category-element
                      +checkbox('Бразильский орех')
                    .catalogue-filter__category-element
                      +checkbox('Грецкий орех')
