include ../blocks/variables
block variables
doctype html
html(lang='ru')
  head
    meta(charset="utf-8")
    title #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='format-detection' content='telephone=no')
    meta(name='description' content='Крупнейший российский производитель и оптовый поставщик натуральных продуктов - орехов и сухофруктов.')
    //color
    meta(name="theme-color" content="#fff")
    //favicons
    link(rel='apple-touch-icon' sizes='180x180' href='https://ruslanmmr.github.io/Semushka/build/img/favicons/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='https://ruslanmmr.github.io/Semushka/build/img/favicons/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='https://ruslanmmr.github.io/Semushka/build/img/favicons/favicon-16x16.png')
    //open graph
    meta(property='og:title' content='Компания «Семушка»')
    meta(property='og:site_name' content=sitename)
    meta(property='og:url' content='https://ruslanmmr.github.io/Semushka/build/') 
    meta(property='og:description' content='Крупнейший российский производитель и оптовый поставщик натуральных продуктов - орехов и сухофруктов.')
    meta(property='og:image' content='https://ruslanmmr.github.io/Semushka/build/img/Banners_2 1.jpg')
    //fonts
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel='stylesheet')
    //styles
    link(rel="stylesheet" href="./styles/theme.css")
    link(rel="stylesheet" href="./styles/common.css")

  body
    if has_banner
      .video-banner 
        .image.image_cover 
          img(data-src="./img/cb.jpg", alt="img").lazyload
    .wrapper
      include ../blocks/header
      main.main
        block content
      include ../blocks/footer
    
    //scripts
    script(src="./scripts/libs/lazysizes.min.js")
    script(src="./scripts/libs/scroll-lock.min.js")
    script(src="./scripts/libs/swiper-bundle.min.js")
    script(src="./scripts/libs/slim-select.min.js")
    script(src="./scripts/scripts.js")

    //preview only
    include ../blocks/helper
